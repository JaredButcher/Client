<LoginPanel>:
    orientation: 'vertical'
    padding: 30
    spacing: 30
    Label:
        text: 'Git Server'
        size_hint_y: None
        height: 40
    TextInput:
        id: 'git_server'
        multiline: False
        write_tab: False
        size_hint_y: None
        height: 40
    Label:
        text: 'Username'
        size_hint_y: None
        height: 40
    TextInput:
        id: 'username'
        multiline: False
        write_tab: False
        size_hint_y: None
        height: 40
    Label:
        text: 'Password'
        size_hint_y: None
        height: 40
    TextInput:
        id: 'password'
        multiline: False
        write_tab: False
        size_hint_y: None
        height: 40
    Button:
        text: 'Connect'

